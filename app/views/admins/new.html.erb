<div class="min-h-screen flex items-center justify-center" 
     style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('<%= asset_path('somos_orb.jpg') %>'); 
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat; 
            background-attachment: fixed;">
  <div class="bg-black/50 max-w-md w-full p-8 rounded-lg shadow-xl border border-gray-700">
    <div class="mb-6">
      <h2 class="text-3xl font-bold text-center text-white">
        CREAR NUEVO ADMIN
      </h2>
    </div>

    <%= form_for @admin, url: admins_path, local: true, class: "space-y-6" do |f| %>
      <% if @admin.errors.any? %>
        <div class="bg-red-900/80 border border-red-600 rounded-md p-4">
          <h3 class="text-red-200 font-medium mb-2">
            <%= pluralize(@admin.errors.count, "error") %> impidieron guardar:
          </h3>
          <ul class="list-disc list-inside text-red-100">
            <% @admin.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= f.label :name, "Nombre completo", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.text_field :name, 
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500",
              placeholder: "Nombre del administrador" %>
        </div>

        <div>
          <%= f.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.email_field :email, 
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500",
              placeholder: "email@ejemplo.com" %>
        </div>

        <div>
          <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password, 
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500",
              placeholder: "Mínimo 6 caracteres" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password_confirmation, 
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500",
              placeholder: "Repetir contraseña" %>
        </div>
      </div>

      <div class="flex space-x-4">
        <%= f.submit "Crear Administrador", 
            class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 transform hover:scale-105" %>
        <%= link_to "Cancelar", admins_path, 
            class: "flex-1 bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-4 rounded-lg text-center transition duration-200 transform hover:scale-105" %>
      </div>
    <% end %>
  </div>
</div>