<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-center text-gray-900">
        Crear Nuevo Administrador
      </h2>
    </div>

    <%= form_for @admin, url: admins_path, local: true, class: "space-y-6" do |f| %>
      <% if @admin.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <h3 class="text-red-800 font-medium mb-2">
            <%= pluralize(@admin.errors.count, "error") %> impidieron guardar:
          </h3>
          <ul class="list-disc list-inside text-red-700">
            <% @admin.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Nombre completo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500",
            placeholder: "Nombre del administrador" %>
      </div>

      <div>
        <%= f.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500",
            placeholder: "email@ejemplo.com" %>
      </div>

      <div>
        <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500",
            placeholder: "Mínimo 6 caracteres" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500",
            placeholder: "Repetir contraseña" %>
      </div>

      <div class="flex space-x-4">
        <%= f.submit "Crear Administrador", 
            class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200" %>
        <%= link_to "Cancelar", admins_path, 
            class: "flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-lg text-center transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>