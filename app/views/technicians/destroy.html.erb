<div class="max-w-xl mx-auto mt-10 bg-indigo-800 rounded-lg shadow p-8 text-indigo-50">
  <h1 class="text-2xl font-bold mb-6 text-red-300">Eliminar Técnico</h1>
  <p class="mb-6">¿Estás seguro que deseas eliminar al técnico <strong><%= @technician.name %></strong>?</p>
  <%= form_with(model: @technician, method: :delete, local: true) do |form| %>
    <div class="flex space-x-4">
      <%= form.submit 'Confirmar Eliminación', class: 'bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded shadow' %>
      <%= link_to 'Cancelar', technicians_path, class: 'bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded shadow' %>
    </div>
  <% end %>
</div>