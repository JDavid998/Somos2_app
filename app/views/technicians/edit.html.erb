<div class="max-w-xl mx-auto mt-10 bg-indigo-800 rounded-lg shadow p-8 text-indigo-50">
  <h1 class="text-2xl font-bold mb-6">Editar Técnico</h1>
  <%= form_with(model: @technician, local: true) do |form| %>
    <% if @technician.errors.any? %>
      <div class="bg-red-100 text-red-800 rounded p-4 mb-4">
        <h2 class="font-bold mb-2"><%= pluralize(@technician.errors.count, "error") %> impidieron guardar el técnico:</h2>
        <ul class="list-disc pl-5">
          <% @technician.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-4">
      <%= form.label :name, 'Nombre', class: 'block font-semibold mb-1' %>
      <%= form.text_field :name, class: 'w-full rounded px-3 py-2 text-indigo-900' %>
    </div>
    <div class="mb-4">
      <%= form.label :email, 'Correo', class: 'block font-semibold mb-1' %>
      <%= form.email_field :email, class: 'w-full rounded px-3 py-2 text-indigo-900' %>
    </div>
    <div class="mb-6">
      <%= form.label :phone, 'Teléfono', class: 'block font-semibold mb-1' %>
      <%= form.telephone_field :phone, class: 'w-full rounded px-3 py-2 text-indigo-900' %>
    </div>
    <div class="flex space-x-4">
      <%= form.submit 'Actualizar Técnico', class: 'bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded shadow' %>
      <%= link_to 'Volver', technicians_path, class: 'bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded shadow' %>
    </div>
  <% end %>
</div>
