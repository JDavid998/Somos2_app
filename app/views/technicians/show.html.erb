<div class="max-w-xl mx-auto mt-10 bg-indigo-800 rounded-lg shadow p-8 text-indigo-50">
  <h1 class="text-2xl font-bold mb-6">Detalles del Técnico</h1>
  <div class="mb-6 space-y-2">
    <div><span class="font-semibold">ID:</span> <%= @technician.id %></div>
    <div><span class="font-semibold">Nombre:</span> <%= @technician.name %></div>
    <div><span class="font-semibold">Correo:</span> <%= @technician.email %></div>
    <div><span class="font-semibold">Teléfono:</span> <%= @technician.phone %></div>
    <div><span class="font-semibold">Creado:</span> <%= @technician.created_at.strftime("%Y-%m-%d %H:%M") %></div>
  </div>
  <div class="flex space-x-4 mt-8 mb-8">
    <%= link_to 'Editar', edit_technician_path(@technician), class: 'bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded shadow' %>
    <%= link_to 'Volver', technicians_path, class: 'bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded shadow' %>
  </div>

  <div class="bg-indigo-700 rounded-lg p-6 mt-8">
    <h2 class="text-lg font-semibold mb-4">Asignar Instalación Pendiente</h2>
  <%= form_with url: assign_installation_path, method: :patch, local: true, scope: nil do |form| %>
      <div class="mb-4">
        <%= form.label :installation_id, 'Instalación', class: 'block font-semibold mb-1' %>
        <%= form.collection_select :installation_id, Installation.where(technician_id: nil, status: 'pending').order(:scheduled_date), :id, :customer_name, { prompt: 'Selecciona una instalación' }, class: 'w-full rounded px-3 py-2 text-indigo-900' %>
      </div>
      <%= form.hidden_field :technician_id, value: @technician.id %>
      <div class="flex space-x-4">
        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded shadow">Asignar a este técnico</button>
      </div>
    <% end %>
  </div>
</div>