<div class="min-h-screen flex items-center justify-center" 
     style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('<%= asset_path('somos_orb.jpg') %>'); 
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat; 
            background-attachment: fixed;">
  <div class="bg-black/50 max-w-md w-full p-8 rounded-lg shadow-xl border border-gray-700">
    <h2 class="text-3xl font-bold mb-6 text-center text-white">CAMBIAR CONTRASEÑA</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "space-y-6") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="space-y-4">
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" do %>
            Nueva contraseña
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-400">(<%= @minimum_password_length %> caracteres mínimo)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500",
              placeholder: "Nueva contraseña" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500",
              placeholder: "Confirmar nueva contraseña" %>
        </div>
      </div>

      <div class="space-y-2">
        <%= f.submit "Cambiar contraseña", 
            class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-4 px-6 rounded-lg transition duration-200 transform hover:scale-105 text-lg" %>
        
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
