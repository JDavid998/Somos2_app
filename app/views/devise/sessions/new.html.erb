<div class="min-h-screen flex items-center justify-center" 
     style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('<%= asset_path('somos_orb.jpg') %>'); 
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat; 
            background-attachment: fixed;">
  <div class="bg-black/50 max-w-md w-full p-8 rounded-lg shadow-xl border border-gray-700">
    <h2 class="text-3xl font-bold mb-6 text-center text-white">INICIA SESIÓN</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500",
              placeholder: "tu@email.com" %>
        </div>

        <div>
          <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500",
              placeholder: "Tu contraseña" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-600 bg-gray-800 rounded" %>
            <%= f.label :remember_me, "Recordarme", class: "ml-3 text-sm text-gray-300 mb-2" %>
          </div>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= f.submit "Iniciar Sesión", 
            class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-4 px-6 rounded-lg transition duration-200 transform hover:scale-105 text-lg" %>
        
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
